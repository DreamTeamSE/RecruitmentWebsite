# Example Environment Variables
# Copy this file to .env.local in frontend and backend directories
# Replace placeholder values with your actual configuration

# ===========================================
# BACKEND ENVIRONMENT VARIABLES
# ===========================================

# Application
NODE_ENV=development
PORT=3000

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/recruitment_db

# Security
JWT_SECRET=your-jwt-secret-key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@domain.com
SMTP_PASSWORD=your-app-password

# CORS
FRONTEND_URL=http://localhost:3001

# ===========================================
# FRONTEND ENVIRONMENT VARIABLES  
# ===========================================

# Application
APP_ENV=development
NEXT_PUBLIC_APP_NAME="Recruitment Website"

# Authentication
NEXTAUTH_SECRET=your-nextauth-secret
NEXTAUTH_URL=http://localhost:3001

# API
NEXT_PUBLIC_BACKEND_URL=http://localhost:3000

# Features
NEXT_PUBLIC_ENABLE_ANALYTICS=false
NEXT_PUBLIC_ENABLE_DEBUG=true

# File Upload
NEXT_PUBLIC_MAX_FILE_SIZE=10485760
NEXT_PUBLIC_ALLOWED_FILE_TYPES=pdf,doc,docx