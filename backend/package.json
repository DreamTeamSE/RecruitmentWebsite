{
  "name": "recruitment-website-backend",
  "version": "1.0.0",
  "description": "Backend API for Recruitment Website",
  "main": "src/index.ts",
  "scripts": {
    "start": "npx ts-node src/index.ts",
    "dev": "npx nodemon --exec npx ts-node src/index.ts",
    "dev:simple": "npx ts-node src/index.ts",
    "dev:local": "NODE_ENV=development npx nodemon --exec npx ts-node src/index.ts",
    "build": "tsc",
    "check": "npx ts-node scripts/startup-check.ts",
    "test": "npx ts-node scripts/test-crud.ts",
    "validate": "node validate-setup.js",
    "clean": "rm -rf dist",
    "type-check": "tsc --noEmit",
    "db:setup": "psql -d recruitment_local -f postgres-init/01_user.sql && psql -d recruitment_local -f postgres-init/02_applications.sql && psql -d recruitment_local -f postgres-init/03_interview.sql && psql -d recruitment_local -f postgres-init/04_add_email_to_form_entries.sql && psql -d recruitment_local -f postgres-init/05_make_email_required.sql"
  },
  "dependencies": {
    "bcryptjs": "^3.0.2",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "nodemailer": "^7.0.4",
    "pg": "^8.11.3",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/node": "^20.5.0",
    "@types/nodemailer": "^6.4.17",
    "@types/pg": "^8.10.2",
    "@types/uuid": "^10.0.0",
    "nodemon": "^3.0.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
